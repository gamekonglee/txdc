<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/lines_efefef"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="goBack">
        <ImageView
            android:background="@mipmap/nav_left"
            android:layout_centerInParent="true"
            android:layout_width="10dp"
            android:layout_height="18dp" />
    </RelativeLayout>
    <TextView
        android:text="收银台"
        android:textColor="#555555"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <View
        android:background="@color/lines_efefef"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="支付金额:"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_money"
            android:textColor="@color/theme_red"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/lines_efefef"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="选择支付方式"
            android:textSize="13sp"
            android:textColor="#999999"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:background="@mipmap/pay_icon"
                    android:layout_width="21dp"
                    android:layout_height="21dp" />
                <ImageView
                    android:background="@mipmap/login_icon_wx_default"
                    android:layout_marginTop="24dp"
                    android:layout_width="21dp"
                    android:layout_height="21dp" />
                <ImageView
                    android:background="@mipmap/blank_icon"
                    android:layout_marginTop="24dp"
                    android:layout_width="21dp"
                    android:visibility="gone"
                    android:layout_height="21dp" />
            </LinearLayout>
            <RadioGroup
                android:id="@+id/rg_pay_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/rb_alipay"
                    android:text="支付宝"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:checked="true"
                    android:drawableRight="@drawable/rb_order"
                    android:button="@null"
                    android:background="@null"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
                <RadioButton
                    android:id="@+id/rb_wx_pay"
                    android:text="微信支付"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:drawableRight="@drawable/rb_order"
                    android:button="@null"
                    android:background="@null"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
                <RadioButton
                    android:visibility="gone"
                    android:id="@+id/rb_bank"
                    android:text="银联支付"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:drawableRight="@drawable/rb_order"
                    android:button="@null"
                    android:background="@null"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_pay"
        android:text="立即支付"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_corner_full_orange_red_25"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>