<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_corner_trans"
    android:layout_width="275dp"
    android:layout_gravity="center"
    android:layout_height="310dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bg_btn_red_top_corner_25">
        <TextView
            android:text="请先设置收货地址"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@mipmap/icon_address_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="35dp"
            android:paddingLeft="35dp"
            android:background="@drawable/bg_corner_full_orange_light_dark_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_ensure"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginLeft="15dp"
            android:paddingRight="35dp"
            android:paddingLeft="35dp"
            android:background="@drawable/bg_corner_full_red_light_dark_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>