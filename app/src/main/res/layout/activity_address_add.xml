<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#efefef"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="goBack">
            <ImageView
                android:src="@mipmap/nav_left"
                android:layout_centerInParent="true"
                android:layout_width="12dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <TextView
            android:textSize="18sp"
            android:textColor="#333333"
            android:text="新建收货人"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/lines_efefef"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/tv_consginer"
            android:textColor="#333333"
            android:textSize="14sp"
            android:text="收货人："
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_consginer"
            android:cursorVisible="true"
        android:layout_toRightOf="@+id/tv_consginer"
            android:layout_marginRight="100dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/rl_consigner"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/user_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="16dp"
                android:layout_height="17dp" />
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:background="@color/lines_efefef"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/tv_mobile"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="联系方式："
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_mobile"
            android:background="@null"
            android:cursorVisible="true"
            android:inputType="number"
            android:layout_toRightOf="@+id/tv_mobile"
            android:layout_width="match_parent"
            android:layout_marginRight="100dp"
            android:layout_height="match_parent" />
        <bc.yxdc.com.view.TextViewPlus
            android:text="+86"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawableRight="@mipmap/arrow_icon"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/lines_efefef"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rl_region"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/tv_region_text"
            android:text="所在地区："
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_region"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_region_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView

            android:background="@mipmap/arrow_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/lines_efefef"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:text="详细地址："
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_address"
            android:hint="街道/楼牌号"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:cursorVisible="true"
            android:gravity="top"
            android:layout_toRightOf="@+id/tv_address"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <View
        android:background="@color/lines_efefef"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <CheckBox
        android:id="@+id/cb_set_default_address"
        android:text="  设置默认地址"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginLeft="10dp"
        android:button="@drawable/cb_type_select"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_save"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:background="@drawable/bg_corner_full_orange_10"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    </LinearLayout>


</LinearLayout>