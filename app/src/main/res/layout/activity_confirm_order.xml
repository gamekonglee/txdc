                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioGroup
                        android:id="@+id/rg_wrap"
                        android:layout_alignParentRight="true"
