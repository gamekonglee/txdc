<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="-15dp"
        android:background="@mipmap/bg_login_z"></RelativeLayout>
<RelativeLayout
    android:onClick="goBack"
    android:layout_marginTop="20dp"
    android:layout_width="50dp"
    android:layout_height="50dp">
    <ImageView
        android:layout_centerInParent="true"
        android:background="@mipmap/fh"
        android:layout_width="11dp"
        android:layout_height="18dp" />
</RelativeLayout>
    <LinearLayout
        android:layout_marginTop="210dp"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/iphone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_phone"
                android:hint="手机号"
                android:textColor="#999999"
                android:textSize="14sp"
                android:cursorVisible="true"
                android:inputType="number"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/lines"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/password_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_pwd"
                android:hint="请输入密码"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="textPassword"
                android:textColor="#999999"
                android:cursorVisible="true"
                android:textSize="14sp"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="1dp"
                android:background="@color/lines"
                android:layout_height="15dp"
                android:layout_marginRight="15dp"/>
            <bc.yxdc.com.ui.view.TimerButton
                android:id="@+id/tv_foget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="忘记密码"
                android:padding="10dp"
                android:hint="@string/code_get_hint"
                android:background="@null"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginRight="21dp"
                android:layout_marginEnd="21dp"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/edtCode"
                android:layout_alignEnd="@+id/edtCode" />
        </LinearLayout>
        <View
            android:background="@color/lines"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:gravity="center"
            android:id="@+id/btn_login"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:background="@drawable/bg_corner_red_orange"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_sms"
                android:text="短信验证码登录"
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_register"
                android:text="新用户注册"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">
            <View
                android:background="@color/lines"
                android:layout_width="50dp"
                android:layout_height="1dp"/>
            <TextView
                android:text="其他方式登录"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/lines"
                android:layout_width="50dp"
                android:layout_height="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_login_wx"
                android:src="@mipmap/share_wx_icon_default"
                android:layout_width="27dp"
                android:layout_height="27dp" />
            <ImageView
                android:id="@+id/iv_login_qq"
                android:src="@mipmap/share_qq_icon_default"
                android:layout_marginLeft="45dp"
                android:layout_width="27dp"
                android:layout_height="27dp" />
            <ImageView
                android:id="@+id/iv_login_ali"
                android:src="@mipmap/pay_icon"
                android:layout_marginLeft="45dp"
                android:layout_width="27dp"
                android:layout_height="27dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>