<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="45dp">
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:onClick="goBack">
        <ImageView
            android:layout_centerInParent="true"
            android:background="@mipmap/nav_left"
            android:layout_width="10dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <TextView
        android:text="第三方登录"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <View
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textSize="18sp"
        android:textColor="#333333"
        android:text="绑定手机号"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="如果该手机未注册过，将生成新的天下灯仓账号"
        android:textColor="#888888"
        android:textSize="13sp"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_corner_dddddd_15"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:text="+86"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#efefef"
            android:layout_marginLeft="60dp"
            android:layout_width="1dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp"/>
        <EditText
            android:layout_marginLeft="70dp"
            android:background="@null"
            android:inputType="number"
            android:hint="手机号"
            android:id="@+id/et_mobile"
            android:textSize="13sp"
            android:textColor="#666666"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/bg_corner_dddddd_15"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_verify"
            android:hint="输入验证码"
            android:textSize="12sp"
            android:paddingLeft="15dp"
            android:inputType="number"
            android:layout_width="100dp"
            android:background="@null"
            android:layout_height="match_parent" />
        <bc.yxdc.com.ui.view.TimerButton
            android:id="@+id/tb_bind"
            android:text="获取验证码"
            android:hint="@string/code_get_hint"
            android:background="@drawable/bg_corner_full_orange_10"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_width="120dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_next"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:text="下一步"
        android:background="@drawable/bg_corner_red_orange"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
</LinearLayout>