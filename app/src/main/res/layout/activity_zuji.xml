<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="45dp">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:onClick="goBack">
            <ImageView
                android:background="@mipmap/nav_left"
                android:layout_centerInParent="true"
                android:layout_width="10dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <TextView
            android:text="我的足迹"
            android:textColor="#555555"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_edit"
            android:text="编辑"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
<include android:id="@+id/layout_empty" android:visibility="gone" layout="@layout/empty_no_content"/>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<bc.yxdc.com.ui.view.EndOfListView
    android:id="@+id/lv_zuji"
    android:layout_marginTop="45dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

</LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_delete"
        android:visibility="gone"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <CheckBox
            android:id="@+id/cb_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:button="@drawable/selector_checkbox"
            android:paddingLeft="5dp"
            android:text="全选"
            android:textSize="14sp"
            android:textColor="#333333"
            />

        <TextView
            android:id="@+id/tv_delete"
            android:text="删除"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_corner_red_orange"
            android:layout_width="75dp"
            android:layout_height="28dp" />
    </RelativeLayout>
</RelativeLayout>
</LinearLayout>