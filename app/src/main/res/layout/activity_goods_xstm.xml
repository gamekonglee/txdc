<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="45dp">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:onClick="goBack">
            <ImageView
                android:background="@mipmap/nav_left"
                android:layout_centerInParent="true"
                android:layout_width="10dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <TextView
            android:text="限时特卖"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <include android:id="@+id/layout_empty" android:visibility="gone" layout="@layout/empty_no_content" />
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ff0022"
    android:layout_height="match_parent"
    >

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ff0022"
    android:layout_height="match_parent">
<RelativeLayout
    android:orientation="vertical"
    android:background="#ff0022"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:background="@mipmap/bg_xstm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <bc.yxdc.com.ui.view.EndOfListView
            android:id="@+id/lv_xstm"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </bc.yxdc.com.ui.view.EndOfListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_corner_orange_trans"
        android:layout_height="95dp"
        android:orientation="vertical"
        android:layout_marginTop="178dp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:text="火爆进行中，距离结束仅剩"
            android:textSize="14sp"
            android:textColor="#ff0022"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="限时特卖"
                android:visibility="gone"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
            android:id="@+id/tv_cd_day"

            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:text="1"
            android:gravity="center"
                android:textSize="15sp"
            android:background="@drawable/bg_corner_full_orange2_10"
            android:layout_width="30dp"
            android:layout_height="30dp" />
            <TextView
            android:text="天"
            android:textColor="#ff6102"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
            android:id="@+id/tv_cd_hour"
                android:textSize="15sp"
                android:background="@drawable/bg_corner_full_orange2_10"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="#ffffff"
            android:layout_marginLeft="3dp"
            android:text="00"
            android:gravity="center"/>
            <TextView
            android:text="时"
                android:textColor="#ff6102"
                android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
            android:id="@+id/tv_cd_min"
            android:textColor="#ffffff"
            android:layout_marginLeft="3dp"
            android:text="00"
            android:gravity="center"
                android:textSize="15sp"
                android:background="@drawable/bg_corner_full_orange2_10"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
            android:text="分"
                android:textColor="#ff6102"
                android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
            android:id="@+id/tv_cd_seconds"
            android:textColor="#ffffff"
            android:layout_marginLeft="3dp"
            android:text="00"
            android:gravity="center"
                android:textSize="15sp"
                android:background="@drawable/bg_corner_full_orange2_10"
                android:layout_width="30dp"
                android:layout_height="30dp"  />
            <TextView
            android:text="秒"
                android:textColor="#ff6102"
                android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
          <TextView
              android:id="@+id/tv_today_temai"
              android:text="今期特卖"
              android:textColor="@color/theme_red"
              android:textSize="16sp"
              android:gravity="center"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:drawableBottom="@drawable/bg_line_red_100"
              android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_next_temai"
                android:text="下期预告"
                android:textColor="#333333"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
</ScrollView>

</RelativeLayout>
</LinearLayout>