<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="45dp">
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:onClick="goBack">
        <ImageView
            android:background="@mipmap/nav_left"
            android:layout_centerInParent="true"
            android:layout_width="10dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <TextView
        android:textColor="#333333"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:text="我的收藏"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_edit"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="编辑"
        android:visibility="gone"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <View
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_default"
            android:text="默认"
            android:gravity="center"
            android:textColor="@color/theme_red"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_price"
            android:text="降价"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <bc.yxdc.com.view.TextViewPlus
            android:id="@+id/tv_category"
            android:text="分类"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableRight="@mipmap/down_default"
            android:paddingRight="30dp"
            android:paddingLeft="20dp"
            android:layout_height="match_parent" />
        <bc.yxdc.com.view.TextViewPlus
            android:id="@+id/tv_store"
            android:text="库存"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:drawableRight="@mipmap/down_default"
            android:paddingRight="30dp"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <bc.yxdc.com.ui.view.EndOfListView
        android:id="@+id/lv_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include android:id="@+id/layout_empty" android:visibility="gone" layout="@layout/empty_no_content"/>
</LinearLayout>