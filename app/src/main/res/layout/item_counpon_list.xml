<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_img"
        android:background="@mipmap/bg_default"
        android:layout_margin="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/tv_name"
            android:textSize="14sp"
            android:textColor="#333333"
            android:lineSpacingExtra="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_coupon_name"
                android:textColor="@color/theme_red"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_coupon_limit"
                android:textSize="12sp"
                android:textColor="#dd6967"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@drawable/line_vertical"
        android:layerType="software"
        android:layout_width="15dp"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="95dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_got"
            android:visibility="gone"
            android:background="@mipmap/img_lqcg"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="95dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <!--<ImageView-->
            <!--android:id="@+id/iv_got"-->
            <!--android:background="@mipmap/img_lqcg"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_height="wrap_content" />-->
             <TextView
                 android:text="已抢"
                 android:textColor="#333333"
                 android:textSize="12sp"
                 android:id="@+id/tv_got"
                 android:layout_margin="10dp"
                 android:layout_centerHorizontal="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/InitProgressBar"
                android:layout_below="@+id/tv_got"
                android:progress="20"
                android:layout_centerHorizontal="true"
                android:layout_width="65dp"
                android:layout_height="5dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_get"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="立即领取"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:background="@mipmap/btn_ljlq"
            android:layout_width="85dp"
            android:layout_height="30dp" />

    </LinearLayout>
    </RelativeLayout>


</LinearLayout>