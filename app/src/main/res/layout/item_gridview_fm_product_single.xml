<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="#ffffff"
    >
    <RelativeLayout
        android:id="@+id/imageViewRl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:scaleType="centerCrop"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bg_default"
            />
        <ImageView
            android:id="@+id/check_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@mipmap/icon_design_product_select"/>
        <TextView
            android:id="@+id/groupbuy_tv"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="限时购"
            android:background="@drawable/shape_red"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="10dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MS5263电灯泡"
            android:lines="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#444444"
            android:textSize="12sp"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/old_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_1"
            android:textColor="#333333"
            android:layout_marginLeft="10dp"
            android:textSize="11sp"
            />
        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.00"
                android:textSize="15sp"
                android:textColor="@color/theme_red"
                />
            <TextView
                android:id="@+id/tv_sold"
                android:text="已售"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>


