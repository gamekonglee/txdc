    <View
        android:background="@color/lines_efefef"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_buy_num"
            android:text="购买数量"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_warn_number"
            android:layout_toRightOf="@+id/tv_buy_num"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:background="@drawable/bg_corner_dddddd_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_reduce"
                android:textColor="#999999"
                android:textSize="15sp"
                android:text="－"
                android:gravity="center"
                android:layout_width="25dp"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:background="#dddddd"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/et_num"
                android:text="1"
                android:background="@null"
                android:inputType="number"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#999999"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:background="#dddddd"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_add"
                android:textColor="#999999"
                android:textSize="15sp"
                android:text="＋"
                android:gravity="center"
                android:layout_width="25dp"
                android:layout_height="match_parent" />

        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:id="@+id/ll_buy"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_add_cart"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:text="加入购物车"
                android:background="@drawable/bg_btn_orange_left_corner_25"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_buy_now"
                android:text="立即购买"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:background="@drawable/bg_btn_red_right_corner_25"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_diy"
            android:text="马上配配看"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:visibility="gone"
            android:background="@drawable/bg_corner_red"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>