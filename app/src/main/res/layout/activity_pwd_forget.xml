<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="goBack">
        <ImageView
            android:background="@mipmap/nav_left"
            android:layout_centerInParent="true"
            android:layout_width="10dp"
            android:layout_height="20dp" />
</RelativeLayout>
    <TextView
        android:text="忘记密码"
        android:textColor="#555555"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <View
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <EditText
                android:id="@+id/et_mobile"
                android:hint="请输入手机号"
                android:inputType="number"
                android:textSize="14sp"
                android:textColor="#999999"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_clear"
                android:background="@mipmap/icon_shut"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
    <View
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <EditText
            android:id="@+id/et_verify"
            android:hint="请输入验证码"
            android:textSize="14sp"
            android:textColor="#999999"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <View
            android:background="#dddddd"
            android:layout_width="1dp"
            android:layout_height="14dp"/>
        <bc.yxdc.com.ui.view.TimerButton
            android:id="@+id/tv_foget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/code_get_hint"
            android:text="获取验证码"
            android:background="@null"
            android:textSize="12sp"
            android:textColor="#ff7200"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_next"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:text="下一步"
        android:background="@drawable/bg_corner_full_orange_red_25"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
</LinearLayout>