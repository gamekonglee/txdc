                    <RelativeLayout
                        android:id="@+id/convenientBanner_rl"
                        android:layout_width="match_parent"
                        android:layout_height="350dp">
                        <com.bigkoo.convenientbanner.ConvenientBanner
                            android:id="@+id/convenientBanner"
                            android:layout_width="wrap_content"
                            android:layout_height="350dp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_qg"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:background="#e62525"
                        android:layout_above="@+id/rl_pro_mid">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="7dp"
                        android:layout_alignBottom="@+id/tv_qg_price"
                        android:text="¥"
                        android:paddingBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_qg_price"
                            android:text="0.00"
                            android:textColor="#ffffff"
                            android:textSize="28sp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_has_got"
                            android:textSize="12sp"
                            android:textColor="#ffffff"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_qg_price"
                            android:layout_marginLeft="15dp"
                            android:text="已抢0件"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical"
                            android:layout_marginRight="15dp">
