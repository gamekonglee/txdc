<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_frag_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:onClick="goBack">
            <ImageView
                android:layout_centerInParent="true"
                android:background="@mipmap/fh"
                android:layout_width="10dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <TextView
            android:text="限时抢购"
            android:paddingTop="20dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:scrollbars="none"
        android:layout_height="45dp">
        <LinearLayout
            android:id="@+id/ll_xsqg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#efefef">
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="抢购中 先下单先得哦"
                android:textColor="#333333"
                android:textSize="10sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical">
                <TextView
                    android:text="距结束:"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_cd_hour"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="3dp"
                    android:text="00"
                    android:gravity="center"
                    android:background="@drawable/bg_corner_full_black_10"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
                <TextView
                    android:text=":"
                    android:textColor="#999999"
                    android:textSize="10sp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_cd_min"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="3dp"
                    android:text="00"
                    android:gravity="center"
                    android:background="@drawable/bg_corner_full_black_10"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
                <TextView
                    android:text=":"
                    android:textColor="#999999"
                    android:textSize="10sp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_cd_seconds"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="3dp"
                    android:text="00"
                    android:gravity="center"
                    android:background="@drawable/bg_corner_full_black_10"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:background="#efefef"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <ListView
            android:id="@+id/lv_xsqg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include android:id="@+id/layout_empty" android:visibility="gone" layout="@layout/empty_no_content"/>
    </LinearLayout>


</LinearLayout>